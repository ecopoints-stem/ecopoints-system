<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.TestActivity">

    <TextView
        android:id="@+id/tvGetUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Adevan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btGetUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GET"
        app:layout_constraintEnd_toEndOf="@id/tvGetUserInfo"
        app:layout_constraintStart_toStartOf="@id/tvGetUserInfo"
        app:layout_constraintTop_toBottomOf="@id/tvGetUserInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>